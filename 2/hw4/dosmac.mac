PRINT_STR MACRO STRING
	PUSH DX
	PUSH AX
	MOV DX,OFFSET STRING 
    MOV AH,9 
   	INT 21H
	POP AX
	POP DX 
ENDM 

GET_STR MACRO BUFFER
	MOV DX,OFFSET BUFFER
	MOV AH,0AH
	INT 21H
ENDM

GET_CHAR MACRO CHAR
	MOV AH,01H
	INT 21H
	MOV CHAR,AL 
ENDM

GET_CHARNE MACRO 
	MOV AH,07H			;no echo option
	INT 21H
ENDM

PRINT_CHAR MACRO CHAR
	PUSH DX
	PUSH AX
	MOV DL,CHAR
	MOV AH,02H
	INT 21H
	POP AX
	POP DX
ENDM

RET_DOS MACRO
	MOV AX,4C00H		;return to DOS
	INT 21H
ENDM